#!/bin/bash

awscli () {
  docker run --rm -it \
  -v "${HOME}/.aws:/root/.aws" \
  nikovirtala/awscli:latest $@
}

aws-shell () {
  docker run --rm -it \
  -v "${HOME}/.aws:/root/.aws" \
  nikovirtala/aws-shell:latest
}

cfssl () {
  docker run --rm \
  -v "$(pwd):/root" \
  nikovirtala/cfssl:latest
}

cfssljson () {
  docker run --rm -i \
  -v "$(pwd):/root" \
  nikovirtala/cfssljson:latest
}

